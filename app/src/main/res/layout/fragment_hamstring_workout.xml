<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/first_card"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_marginTop="36dp"
            android:alpha="0.45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_gradient" />

        <TextView
            android:id="@+id/tv_workout_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:alpha="0.6"
            android:fontFamily="@font/poppins_regular"
            android:text="300kcal"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/first_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_workout_description"
            app:layout_constraintTop_toTopOf="@+id/first_card" />

        <TextView
            android:id="@+id/tv_workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Program za zadnju ložu"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/first_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/first_card"
            app:layout_constraintTop_toTopOf="@+id/first_card" />

        <TextView
            android:id="@+id/tv_workout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:alpha="0.6"
            android:fontFamily="@font/poppins_regular"
            android:text="4 vježbe | 30 min | "
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/first_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/first_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_workout_title" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_history"
            android:layout_width="170dp"
            android:layout_height="37dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_white"
            android:fontFamily="@font/poppins_medium"
            android:text="Označi kao odrađeno"
            android:textAllCaps="false"
            android:textColor="@color/purple_gradient"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/first_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/first_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_workout_description"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/im_chestpress_card"
            android:layout_width="336dp"
            android:layout_height="117dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/gray_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_card" />

        <ImageView
            android:id="@+id/iv_chestpress"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/hams1"
            app:layout_constraintBottom_toBottomOf="@+id/im_chestpress_card"
            app:layout_constraintStart_toStartOf="@+id/im_chestpress_card"
            app:layout_constraintTop_toTopOf="@+id/im_chestpress_card"
            app:layout_constraintVertical_bias="0.518" />

        <TextView
            android:id="@+id/tv_exercise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Deadlift"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_chestpress"
            app:layout_constraintTop_toTopOf="@+id/im_chestpress_card" />

        <TextView
            android:id="@+id/tv_exercise1_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/blue_workout"
            android:text="Video tutorijal"
            app:layout_constraintStart_toEndOf="@+id/iv_chestpress"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise1" />

        <TextView
            android:id="@+id/tv_exercise1_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"

            android:text="3x12 Ponavljanja"
            app:layout_constraintStart_toEndOf="@+id/iv_chestpress"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise1_link" />


        <ImageView
            android:id="@+id/im_shoulderpress_card"
            android:layout_width="336dp"
            android:layout_height="117dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/gray_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_chestpress_card" />

        <ImageView
            android:id="@+id/iv_shoulderpress"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/hams2"
            app:layout_constraintBottom_toBottomOf="@+id/im_shoulderpress_card"
            app:layout_constraintStart_toStartOf="@+id/im_shoulderpress_card"
            app:layout_constraintTop_toTopOf="@+id/im_shoulderpress_card"
            app:layout_constraintVertical_bias="0.518" />

        <TextView
            android:id="@+id/tv_exercise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Romanian Deadlift"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_chestpress"
            app:layout_constraintTop_toTopOf="@+id/im_shoulderpress_card" />

        <TextView
            android:id="@+id/tv_exercise2_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/blue_workout"
            android:text="Video tutorijal"
            app:layout_constraintStart_toEndOf="@+id/iv_shoulderpress"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise2" />

        <TextView
            android:id="@+id/tv_exercise2_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="3x12 Ponavljanja"
            app:layout_constraintStart_toEndOf="@+id/iv_shoulderpress"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise2_link" />




        <ImageView
            android:id="@+id/im_bicep_card"
            android:layout_width="336dp"
            android:layout_height="117dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/gray_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_shoulderpress_card" />

        <ImageView
            android:id="@+id/iv_bicep"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/hams3"
            app:layout_constraintBottom_toBottomOf="@+id/im_bicep_card"
            app:layout_constraintStart_toStartOf="@+id/im_bicep_card"
            app:layout_constraintTop_toTopOf="@+id/im_bicep_card"
            app:layout_constraintVertical_bias="0.518" />

        <TextView
            android:id="@+id/tv_exercise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Good Mornings"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_bicep"
            app:layout_constraintTop_toTopOf="@+id/im_bicep_card" />

        <TextView
            android:id="@+id/tv_exercise3_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/blue_workout"
            android:text="Video tutorijal"
            app:layout_constraintStart_toEndOf="@+id/iv_bicep"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise3" />

        <TextView
            android:id="@+id/tv_exercise3_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="3x12 Ponavljanja"
            app:layout_constraintStart_toEndOf="@+id/iv_bicep"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise3_link" />


        <ImageView
            android:id="@+id/im_tricep_card"
            android:layout_width="336dp"
            android:layout_height="117dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/gray_input"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_bicep_card" />

        <ImageView
            android:id="@+id/iv_tricep"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/hams4"
            app:layout_constraintBottom_toBottomOf="@+id/im_tricep_card"
            app:layout_constraintStart_toStartOf="@+id/im_tricep_card"
            app:layout_constraintTop_toTopOf="@+id/im_tricep_card"
            app:layout_constraintVertical_bias="0.518" />

        <TextView
            android:id="@+id/tv_exercise4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Hip Thrust"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_tricep"
            app:layout_constraintTop_toTopOf="@+id/im_tricep_card" />

        <TextView
            android:id="@+id/tv_exercise4_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_workout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Video tutorijal"
            app:layout_constraintStart_toEndOf="@+id/iv_tricep"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise4" />

        <TextView
            android:id="@+id/tv_exercise4_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="3x12 Ponavljanja"
            app:layout_constraintStart_toEndOf="@+id/iv_tricep"
            app:layout_constraintTop_toBottomOf="@+id/tv_exercise4_link" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>